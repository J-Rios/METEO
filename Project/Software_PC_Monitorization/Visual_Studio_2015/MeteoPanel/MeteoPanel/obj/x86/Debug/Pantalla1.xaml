<Page
    x:Class="MeteoPanel.Pantalla1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MeteoPanel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:ConnectionId='1' x:Name="textBlock_titulo" HorizontalAlignment="Left" Margin="190,42,0,0" TextWrapping="Wrap" Text="Conexión / Desconexión" VerticalAlignment="Top" FontSize="48"/>
        <Line x:ConnectionId='2' x:Name="line_1" Stroke="White" X2="1200" Y2="115" X1="190" Y1="115" StrokeThickness="2"/>
        <Line x:ConnectionId='3' x:Name="line_2" Stroke="White" X2="682" Y2="550" X1="682" Y1="300"/>
        <Button x:ConnectionId='4' x:Name="button_conectar" Content="Conectar" HorizontalAlignment="Left" Margin="218,396,0,0" VerticalAlignment="Top"                                Height="68" Width="169" FontSize="22"/>
        <Button x:ConnectionId='5' x:Name="button_desconectar" Content="Desconectar" HorizontalAlignment="Left" Margin="452,396,0,0" VerticalAlignment="Top"                                   Height="68" Width="169" FontSize="22"/>
        <TextBlock x:ConnectionId='6' x:Name="textBlock" HorizontalAlignment="Left" Margin="190,162,0,0" TextWrapping="Wrap" Text="Establecer conexión con algún dispositivo seleccionado de la lista de dispositivos que están transmitiendo en la red. Una vez conectado, acceder a la visualización de los datos a tiempo real o mediante grafica de su histórico en las pestañas correspondientes." VerticalAlignment="Top" FontSize="24" Width="989"/>
        <TextBlock x:ConnectionId='7' x:Name="textBlock_Estado" HorizontalAlignment="Left" Margin="511,620,0,0" TextWrapping="Wrap" Text="Desconectado" Foreground="Red" VerticalAlignment="Top" FontSize="24"/>
        <ListBox x:ConnectionId='8' x:Name="listBox" ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Height="184" Margin="746,364,0,172" VerticalAlignment="Top" Width="373"/>
        <TextBlock x:ConnectionId='9' x:Name="textBlock1" HorizontalAlignment="Left" Margin="746,322,0,0" TextWrapping="Wrap" Text="Dispositivos en la red:" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock x:ConnectionId='10' x:Name="textBlock_EstadoActual" HorizontalAlignment="Left" Margin="190,620,0,0" TextWrapping="Wrap" Text="Estado actual de la conexión:" VerticalAlignment="Top" FontSize="24"/>
    </Grid>

</Page>

